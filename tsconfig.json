{
    "compilerOptions": {
        "esModuleInterop": true,
        "outDir": "build",
        "baseUrl": "./src",
        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "paths": {
            "@routes/*": ["routes/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ]
}